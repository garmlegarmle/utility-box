---
import BaseLayout from './BaseLayout.astro';
import type { SiteLang } from '../consts';
import { getOtherLang } from '../lib/content';

interface Props {
  lang: SiteLang;
  title: string;
  tagLine?: string;
}

const { lang, title, tagLine } = Astro.props;
const otherLang = getOtherLang(lang);
---
<BaseLayout
  title={title}
  description={title}
  lang={lang}
  activeNav="blog"
  languageToggleHref={`/${otherLang}/blog/`}
  canonicalPath={`/${lang}/blog/`}
  alternates={[
    { lang: 'en', href: '/en/blog/' },
    { lang: 'ko', href: '/ko/blog/' }
  ]}
>
  <section class="page-section">
    <div class="container">
      <header class="list-head">
        <h1>{title}</h1>
        {tagLine && <p class="list-tags">{tagLine}</p>}
      </header>
      <div class="listing-grid listing-grid--four">
        <slot />
      </div>
    </div>
  </section>
</BaseLayout>
