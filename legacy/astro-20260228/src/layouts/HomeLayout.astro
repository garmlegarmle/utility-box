---
import BaseLayout from './BaseLayout.astro';
import type { SiteLang } from '../consts';
import { getOtherLang } from '../lib/content';

interface Props {
  lang: SiteLang;
  blogTitle: string;
  toolsTitle: string;
  gamesTitle: string;
}

const { lang, blogTitle, toolsTitle, gamesTitle } = Astro.props;
const otherLang = getOtherLang(lang);
---
<BaseLayout
  title={lang === 'ko' ? '홈' : 'Home'}
  description={lang === 'ko' ? '실용적인 도구와 가이드' : 'Practical tools and guides'}
  lang={lang}
  activeNav="home"
  languageToggleHref={`/${otherLang}/`}
  canonicalPath={`/${lang}/`}
  alternates={[
    { lang: 'en', href: '/en/' },
    { lang: 'ko', href: '/ko/' }
  ]}
>
  <section class="page-section home-row-section">
    <div class="container">
      <h2 class="row-heading">{blogTitle}</h2>
      <div class="home-row-shell">
        <button class="home-row-arrow" type="button" aria-label="Previous blog items" disabled>
          <span aria-hidden="true">‹</span>
        </button>
        <div class="home-row-track">
          <slot name="blog" />
        </div>
      </div>
    </div>
  </section>

  <section class="page-section home-row-section">
    <div class="container">
      <h2 class="row-heading">{toolsTitle}</h2>
      <div class="home-row-shell">
        <button class="home-row-arrow" type="button" aria-label="Previous tool items" disabled>
          <span aria-hidden="true">‹</span>
        </button>
        <div class="home-row-track">
          <slot name="tools" />
        </div>
      </div>
    </div>
  </section>

  <section class="page-section home-row-section">
    <div class="container">
      <h2 class="row-heading">{gamesTitle}</h2>
      <div class="home-row-shell">
        <button class="home-row-arrow" type="button" aria-label="Previous game items" disabled>
          <span aria-hidden="true">‹</span>
        </button>
        <div class="home-row-track">
          <slot name="games" />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
