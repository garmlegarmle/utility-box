---
import type { SiteLang } from '../../consts';

interface Props {
  lang: SiteLang;
}

const { lang } = Astro.props;
const year = new Date().getFullYear();
---
<footer class="site-footer">
  <div class="container footer-grid">
    <p class="footer-meta">&copy; {year} Utility Box. {lang === 'ko' ? '실용적인 도구와 가이드.' : 'Practical tools and guides.'}</p>
    <div class="footer-links">
      <a class="text-link" href={`/${lang}/pages/contact/`}>{lang === 'ko' ? 'Contact' : 'Contact'}</a>
      <a class="text-link" href={`/${lang}/pages/about/`}>{lang === 'ko' ? 'About' : 'About'}</a>
      <a class="text-link" href={`/${lang}/pages/privacy-policy/`}>{lang === 'ko' ? 'Privacy Policy' : 'Privacy Policy'}</a>
    </div>
  </div>
</footer>
